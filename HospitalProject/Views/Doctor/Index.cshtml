@model IEnumerable<HospitalProject.Models.Doctor>
@using HospitalProject.Models


@{
    ViewBag.Title = "Doctor";
}

<h2>Doctor</h2>

@Html.ActionLink("Home", "Index", "Home") |
@Html.ActionLink("Doctor", "Index", "Doctor") |
@Html.ActionLink("Patient", "Index", "Patient") |
@Html.ActionLink("Visit", "Index", "Visit")

<p>
    @Html.ActionLink("Create New", "Create")
    @Html.ActionLink("Show All", "Index")
</p>

@using (Html.BeginForm("Index", "Doctor", FormMethod.Get))
{
    <b>Search By:</b>
    @Html.RadioButton("SearchBy", "Name", true) <text>Doctor Name</text>
    @Html.RadioButton("SearchBy", "Office", true) <text>Office</text>
    <br />
    @Html.TextBox("search") <input type="submit" value="Search" />
}



<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Office)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telephone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th></th>
    </tr>

    @if(Model.Count() == 0)
     {
        <tr>
            <td colspan="5">No rows matched</td>
        </tr>
    }
    else
    {


    foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Office)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telephone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
    }

</table>
